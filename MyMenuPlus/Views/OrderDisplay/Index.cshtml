
@{
    ViewBag.Title = "Index";
    Layout = "Order Display";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Display</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Orders.css">


</head>
<body>


    <div id="breakers"></div>
    <div id="login">

        <form id="connection-form">
            <h2>Connect Order Diplay</h2>
            <input id="connection-key" type="text" placeholder="Connection Key" required>
            <input id="connection-submit" type="submit" value="Connect">

            <p id="connection-message">You can find your Connection Key by logging in and going to the menu editor</p>
            <a class="loading"></a>
        </form>

    </div>

    <div id="order-container"></div>
</body>


@Scripts.Render("~/bundles/OrderDisplayScripts")

<!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>
<!--SignalR script to update the chat page and send messages.-->
<script>



   
        // Reference the auto-generated proxy for the hub.
        var orderDisplay = $.connection.orderDisplayHub;


    
        orderDisplay.client.order = function (id,transactionID,table, items) {
            newOrder(id, transactionID, table, items)
        };

        orderDisplay.client.orders = function (orderData) {
           
            var orderDataJSON = JSON.parse(orderData).reverse();


            for (let i = 0; i < orderDataJSON.length; i++) {
               
                try {
                    newOrder(orderDataJSON[i].id, orderDataJSON[i].transaction, orderDataJSON[i].tableNumber, orderDataJSON[i].itemsJSON, new Date(orderDataJSON[i].ordered))
                } catch(e){ }

            }


        };
        

        orderDisplay.client.login = function (result) {
            $(".loading").hide();
            if (result == "Logged in" || result == "Already logged in") {
                $("#connection-form").css({ "display": "none" })
                orderDisplay.server.loadOrders($.connection.hub.id);
            } else {
                $("#connection-message").val("Login Incorrect")
                $("#connection-message").css({"color":"red"})
            }


            console.log("result: " + result)
        };


        // Start the connection.
        $.connection.hub.start().done(function () {

          



        });


  
   
</script>




</html>