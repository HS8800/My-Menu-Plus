
@{
    ViewBag.Title = "Index";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Orders.css">


</head>
<body>


    <div id="breakers"></div>
    <div id="login">

        <form id="connection-form">
            <h2>Connect Order Diplay</h2>
            <input id="connection-key" type="text" placeholder="Connection Key" required>
            <input id="connection-submit" type="submit" value="Connect">

            <p id="connection-message">You can find your Connection Key by logging in and going to the menu editor</p>
            <a class="loading"></a>
        </form>

    </div>

    <div id="order-container">

        <div>
            <div class="timer"><span>0</span>:<span>0</span>:<span>0</span></div>
            <div class="order-content">
                <h2>Order <span>3223</span></h2>
                <h4 class="table-number">Table <span>3</span></h4>
            </div>
            <table class="item-table">
                <tbody>
                    <tr>
                        <td>2</td>
                        <td>Burger</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Burger</td>
                    </tr>
                </tbody>
            </table>
            <button class="order-complete">Complete</button>
        </div>

    </div>
</body>


@Scripts.Render("~/bundles/OrderDisplayScripts")

<!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>
<!--SignalR script to update the chat page and send messages.-->
<script>



   
        // Reference the auto-generated proxy for the hub.
        var orderDisplay = $.connection.orderDisplayHub;


        // Create a function that the hub can call back to display messages.

    

        orderDisplay.client.order = function (id, table, items) {
            newOrder(id, table, items)
        };

        orderDisplay.client.login = function (result) {
            $(".loading").hide();
            if (result == "Logged in" || result == "Already logged in") {
                $("#connection-form").css({"display":"none"})
            } else {
                $("#connection-message").val("Login Incorrect")
                $("#connection-message").css({"color":"red"})
            }


            console.log("result: " + result)
        };


        // Start the connection.
        $.connection.hub.start().done(function () {
           



        });


  
   
</script>




</html>