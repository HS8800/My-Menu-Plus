
@{
    Layout = "~/Views/Shared/EditorSiteLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu</title>



    @Styles.Render("~/bundles/MenuEditorPageStyles")





</head>

<body>

    <div class="section-banner">
        <div>
            <div class="section-title title-bold title-banner" style="font-size: 40px; color: #0c3853;margin: 10px 0px 0px 0px;">Menu Editor</div>
            <div class="section-title title-small" style="margin:0px">Create content for your menu</div>
        </div>
    </div>


    <div id="toolbar">
        <ul>
            <li class="loading"></li>
            <li data-content="@ViewData["menuID"]" id="toolbar-save"><a>Save Changes <i class="fa fa-floppy-o" aria-hidden="true"></i></a></li>
            <li id="toolbar-uptodate"><a>Uptodate <i class="fa fa-check" aria-hidden="true"></i></a></li>
        </ul>
    </div>


    <div class="editor-section" style="margin: 10px;">
        <div class="editor-section-handle"></div>
        <div class="editor-section-content">





            <div class="editor-section section-title">
                <div class="editor-section-handle"></div>
                <div class="editor-section-content">
                    <input id="menu-title" class="section-title-input" placeholder="Menu Title" value="@ViewData["title"]">
                    <input id="section-file-import" type="file" style="background-image:url('@ViewData["bannerImage"]')">
                </div>

            </div>

            <div class="editor-section-tags">@Html.Raw(ViewData["tags"])</div>
            <div class="editor-add-tag">Add Tag</div>
        </div>
    </div>



    <div id="section-container">@Html.Raw(@ViewData["sections"])</div>

    <div class="editor-add add-section">Add Section</div>


</body>




@Scripts.Render("~/bundles/MenuEditorPageScripts")

<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>



</html>
