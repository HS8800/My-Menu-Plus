<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu</title>



    @Styles.Render("~/bundles/MenuEditorPageStyles")





</head>

<body>

    <div id="toolbar">
        <ul>
            <li id="toolbar-save"><a>Save Changes <i class="fa fa-floppy-o" aria-hidden="true"></i></a></li>
            <li id="toolbar-uptodate"><a>Uptodate <i class="fa fa-check" aria-hidden="true"></i></a></li>
        </ul>
    </div>


    <div class="editor-section">
        <div class="editor-section-handle"></div>
        <div class="editor-section-content">





            <div class="editor-section section-title">
                <div class="editor-section-handle"></div>
                <div class="editor-section-content">
                    <input class="section-title-input" placeholder="Menu Title">
                    <input class="section-file-import" type="file">
                </div>

            </div>



            <div class="editor-section-tags">

            </div>
            <div class="editor-add-tag">Add Tag</div>
        </div>
    </div>



    <div id="section-container">

        <div class="editor-section">
            <div class="editor-section-handle"></div>
            <div class="editor-section-content">

                <div class="editor-section section-title">
                    <div class="editor-section-handle"></div>
                    <div class="editor-section-content">
                        <input class="section-title-input" placeholder="Title">
                    </div>
                </div>


                <div class="editor-section-items">
                    <div draggable="true" class="editor-section section-item">
                        <div class="editor-section-handle"></div>
                        <div class="editor-section-content">
                            <div>
                                <input placeholder="Item Name">
                                <textarea placeholder="Item Description" rows="4" cols="50"></textarea>
                            </div>
                            <div>
                                <input placeholder="Price" onchange="this.value = currency.format(this.value).replace(/[£]/g, '')" type="number" min="0.01" step="0.01">
                                Tags<br>
                                <input type="checkbox" value="Vegetarian">
                                <label for="Vegetarian">Vegetarian</label><br>
                                <input type="checkbox" value="Spicy">
                                <label for="Vegetarian">Spicy</label><br>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="editor-add">Add Item</div>
            </div>
        </div>


    </div>

    <div class="editor-add add-section">Add Section</div>


</body>



@*@Scripts.Render("~/bundles/MenuScripts")*@
@Scripts.Render("~/bundles/MenuEditorPageScripts")

<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>



</html>
