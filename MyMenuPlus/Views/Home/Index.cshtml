            </div>
        </div>
    </div>




    <div data-aos="fade-left">
        <div class="flex-container">
            <div></div>
            <div class="article-content">
                <div class="section-title">Your Brand</div>
                <div class="article-text">Create professional looking menus with your own branding that people will recognize.</div>
                <button class="btn btn-article">Start Using Your Brand</button>
            </div>
        </div>
    </div>



    <div data-aos="fade-right">
        <div class="flex-container">
            <div class="article-content">
                <div class="section-title">Flexible Design</div>
                <div class="article-text">Create professional looking menus with your own branding that people will recognize.</div>
                <button class="btn btn-article">Get Started</button>
            </div>
            <div></div>
        </div>
    </div>





    <div class="space">
        <div data-aos="fade-up" class="section-title">Managment Tools</div>
        <div class="flex-container">
            <div data-aos="fade-up"></div>
            <div data-aos="fade-up" data-aos-delay="100"></div>
            <div data-aos="fade-up" data-aos-delay="200"></div>
        </div>
    </div>









    @Scripts.Render("~/bundles/HomePageScripts")


    <script>
        AOS.init();
    </script>


    <style>
        #nav {
            background-color: initial;
        }

        #logout-li {
            display: none;
        }

        #login-show {
            display: block;
        }

    </style>

    @Html.AntiForgeryToken()
</body>
</html>